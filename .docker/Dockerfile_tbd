FROM tbd_dev AS tbd_clean
RUN apt-get remove -y gcc gcc-12 make git zip unzip \
    libtiff-dev libgeotiff-dev g++ \
    subversion mercurial \
    libgdal-dev rsync openssh-server \
    libgdal-dev gdb valgrind time \
    libdwarf-dev libelf-dev libnuma-dev \
    libunwind-dev libnewt-dev libdwarf++0 libelf++0 \
    libdw-dev libbfb0-dev \
  && apt-get remove -y `(apt list --installed | grep "dev" | grep -v "udev" | sed "s/\(^\/\)*\/.*/\1/g" | tr '\n' ' ')` \
  && apt autoremove -y \
  && apt-get clean \
  && rm -rf \
    /var/lib/apt/lists/* \
    /usr/share/man/* \
    /usr/includes/* \
    /var/cache/apk/*

